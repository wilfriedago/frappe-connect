{
  "doctype": "DocType",
  "name": "Fineract Event Handler Action",
  "module": "Fineract Kafka",
  "custom": 0,
  "istable": 1,
  "editable_grid": 1,
  "track_changes": 0,
  "engine": "InnoDB",
  "field_order": [
    "action_type",
    "enabled",
    "sync_job_type",
    "method_path",
    "target_doctype",
    "config_column",
    "field_mapping_json",
    "correlation_field",
    "queue"
  ],
  "fields": [
    {
      "fieldname": "action_type",
      "fieldtype": "Select",
      "label": "Action Type",
      "options": "Sync Job\nMethod Call\nCreate Document\nUpdate Document",
      "reqd": 1,
      "in_list_view": 1,
      "columns": 2
    },
    {
      "fieldname": "enabled",
      "fieldtype": "Check",
      "label": "Enabled",
      "default": "1",
      "in_list_view": 1,
      "columns": 1
    },
    {
      "fieldname": "sync_job_type",
      "fieldtype": "Link",
      "label": "Sync Job Type",
      "options": "Sync Job Type",
      "depends_on": "eval:doc.action_type=='Sync Job'",
      "mandatory_depends_on": "eval:doc.action_type=='Sync Job'",
      "in_list_view": 1,
      "columns": 2
    },
    {
      "fieldname": "method_path",
      "fieldtype": "Data",
      "label": "Method Path",
      "depends_on": "eval:doc.action_type=='Method Call'",
      "mandatory_depends_on": "eval:doc.action_type=='Method Call'",
      "in_list_view": 1,
      "columns": 2,
      "description": "Dotted Python path to callable"
    },
    {
      "fieldname": "target_doctype",
      "fieldtype": "Link",
      "label": "Target DocType",
      "options": "DocType",
      "depends_on": "eval:['Create Document','Update Document'].includes(doc.action_type)",
      "mandatory_depends_on": "eval:['Create Document','Update Document'].includes(doc.action_type)"
    },
    {
      "fieldname": "config_column",
      "fieldtype": "Column Break"
    },
    {
      "fieldname": "field_mapping_json",
      "fieldtype": "Code",
      "label": "Field Mapping JSON",
      "options": "JSON",
      "description": "Maps event payload fields â†’ DocType fields. JSON object: {\"target_field\": \"source.path\"}"
    },
    {
      "fieldname": "correlation_field",
      "fieldtype": "Data",
      "label": "Correlation Field",
      "description": "Event payload field used for matching existing docs, e.g. externalId"
    },
    {
      "fieldname": "queue",
      "fieldtype": "Select",
      "label": "Queue",
      "options": "short\ndefault\nlong",
      "default": "default",
      "in_list_view": 1,
      "columns": 1
    }
  ],
  "permissions": []
}
