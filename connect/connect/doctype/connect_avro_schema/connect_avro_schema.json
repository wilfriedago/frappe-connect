{
  "doctype": "DocType",
  "name": "Connect Avro Schema",
  "module": "Connect",
  "custom": 0,
  "istable": 0,
  "is_submittable": 0,
  "track_changes": 1,
  "engine": "InnoDB",
  "autoname": "format:{schema_name}-v{schema_version}",
  "naming_rule": "Expression",
  "sort_field": "modified",
  "sort_order": "DESC",
  "field_order": [
    "schema_name",
    "schema_id",
    "schema_version",
    "meta_column",
    "subject",
    "schema_type",
    "is_latest",
    "last_fetched",
    "schema_section",
    "schema_json"
  ],
  "fields": [
    {
      "fieldname": "schema_name",
      "fieldtype": "Data",
      "label": "Schema Name",
      "reqd": 1,
      "in_list_view": 1,
      "in_standard_filter": 1,
      "search_index": 1,
      "description": "Fully qualified name, e.g. org.apache.fineract.avro.MessageV1"
    },
    {
      "fieldname": "schema_id",
      "fieldtype": "Int",
      "label": "Schema ID",
      "in_list_view": 1,
      "description": "Numeric ID in Schema Registry"
    },
    {
      "fieldname": "schema_version",
      "fieldtype": "Int",
      "label": "Schema Version",
      "in_list_view": 1
    },
    {
      "fieldname": "meta_column",
      "fieldtype": "Column Break"
    },
    {
      "fieldname": "subject",
      "fieldtype": "Data",
      "label": "Subject",
      "description": "Schema Registry subject name"
    },
    {
      "fieldname": "schema_type",
      "fieldtype": "Select",
      "label": "Schema Type",
      "options": "envelope\ncommand\nevent",
      "in_list_view": 1,
      "in_standard_filter": 1
    },
    {
      "fieldname": "is_latest",
      "fieldtype": "Check",
      "label": "Is Latest",
      "default": "0",
      "in_list_view": 1
    },
    {
      "fieldname": "last_fetched",
      "fieldtype": "Datetime",
      "label": "Last Fetched",
      "read_only": 1
    },
    {
      "fieldname": "schema_section",
      "fieldtype": "Section Break",
      "label": "Schema Definition"
    },
    {
      "fieldname": "schema_json",
      "fieldtype": "Code",
      "label": "Schema JSON",
      "options": "JSON",
      "reqd": 1
    }
  ],
  "permissions": [
    {
      "role": "System Manager",
      "read": 1,
      "write": 1,
      "create": 1,
      "delete": 1,
      "report": 1,
      "export": 1
    }
  ]
}
