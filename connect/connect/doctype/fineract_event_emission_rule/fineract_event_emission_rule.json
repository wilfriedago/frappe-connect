{
  "doctype": "DocType",
  "name": "Fineract Event Emission Rule",
  "module": "Connect",
  "custom": 0,
  "istable": 0,
  "is_submittable": 0,
  "track_changes": 1,
  "engine": "InnoDB",
  "autoname": "field:rule_name",
  "naming_rule": "By fieldname",
  "sort_field": "priority",
  "sort_order": "ASC",
  "field_order": [
    "rule_name",
    "enabled",
    "source_section",
    "source_doctype",
    "document_event",
    "condition",
    "command_section",
    "command_type",
    "command_category",
    "command_column",
    "avro_schema_name",
    "topic_override",
    "tenant_id_override",
    "priority",
    "mapping_section",
    "field_mappings",
    "notes_section",
    "description"
  ],
  "fields": [
    {
      "fieldname": "rule_name",
      "fieldtype": "Data",
      "label": "Rule Name",
      "reqd": 1,
      "unique": 1,
      "in_list_view": 1,
      "in_standard_filter": 1,
      "description": "Unique identifier, e.g. 'Customer Create â†’ Fineract Client'"
    },
    {
      "fieldname": "enabled",
      "fieldtype": "Check",
      "label": "Enabled",
      "default": "1",
      "in_list_view": 1
    },
    {
      "fieldname": "source_section",
      "fieldtype": "Section Break",
      "label": "Source"
    },
    {
      "fieldname": "source_doctype",
      "fieldtype": "Link",
      "label": "Source DocType",
      "options": "DocType",
      "reqd": 1,
      "in_list_view": 1,
      "in_standard_filter": 1,
      "search_index": 1
    },
    {
      "fieldname": "document_event",
      "fieldtype": "Select",
      "label": "Document Event",
      "options": "after_insert\non_submit\non_update\non_trash\non_cancel",
      "reqd": 1,
      "in_list_view": 1,
      "in_standard_filter": 1
    },
    {
      "fieldname": "condition",
      "fieldtype": "Code",
      "label": "Condition",
      "options": "Python",
      "description": "Optional Python expression. Evaluated with 'doc' in scope. Must return truthy to proceed."
    },
    {
      "fieldname": "command_section",
      "fieldtype": "Section Break",
      "label": "Fineract Command"
    },
    {
      "fieldname": "command_type",
      "fieldtype": "Data",
      "label": "Command Type",
      "reqd": 1,
      "in_list_view": 1,
      "description": "e.g. ExternalCreateClientCommand"
    },
    {
      "fieldname": "command_category",
      "fieldtype": "Data",
      "label": "Command Category",
      "reqd": 1,
      "description": "e.g. CLIENT, LOAN"
    },
    {
      "fieldname": "command_column",
      "fieldtype": "Column Break"
    },
    {
      "fieldname": "avro_schema_name",
      "fieldtype": "Data",
      "label": "Avro Schema Name",
      "reqd": 1,
      "description": "Fully qualified inner schema name, e.g. org.apache.fineract.avro.external.v1.ExternalCreateClientCommandV1"
    },
    {
      "fieldname": "topic_override",
      "fieldtype": "Data",
      "label": "Topic Override",
      "description": "If blank, uses the default command topic from settings"
    },
    {
      "fieldname": "tenant_id_override",
      "fieldtype": "Data",
      "label": "Tenant ID Override",
      "description": "If blank, uses the default tenant ID from settings"
    },
    {
      "fieldname": "priority",
      "fieldtype": "Int",
      "label": "Priority",
      "default": "10",
      "description": "Lower value = higher priority"
    },
    {
      "fieldname": "mapping_section",
      "fieldtype": "Section Break",
      "label": "Field Mappings"
    },
    {
      "fieldname": "field_mappings",
      "fieldtype": "Table",
      "label": "Field Mappings",
      "options": "Fineract Field Mapping",
      "reqd": 1
    },
    {
      "fieldname": "notes_section",
      "fieldtype": "Section Break",
      "label": "Notes",
      "collapsible": 1
    },
    {
      "fieldname": "description",
      "fieldtype": "Small Text",
      "label": "Description"
    }
  ],
  "permissions": [
    {
      "role": "System Manager",
      "read": 1,
      "write": 1,
      "create": 1,
      "delete": 1,
      "report": 1,
      "export": 1,
      "import": 1
    }
  ]
